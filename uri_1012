//calculo das areas do triangulo retangulo, circulo, trapezio, quadrado e retangulo a partir de 3 valores inseridos.
#include <stdio.h>
#include <math.h>
using namespace std;



int main(){
    double pi, A, B, C, triangulo, circulo, trapezio, quadrado, retangulo;
    pi = 3.14159;

    scanf("%lf %lf %lf", &A, &B, &C);
    
    triangulo = (A*C)/2;
    circulo = pi*pow(C,2);
    trapezio = ((A+B)*C)/2;
    quadrado = pow(B,2);
    retangulo = A*B;

    printf("TRIANGULO: %.3lf\n", triangulo);
    printf("CIRCULO: %.3lf\n", circulo);
    printf("TRAPEZIO: %.3lf\n", trapezio);
    printf("QUADRADO: %.3lf\n", quadrado);
    printf("RETANGULO: %.3lf\n", retangulo);

return 0;
}
